<?xml version="1.0" encoding="UTF-8"?>
<sitemesh>
	<!-- 메인화면. -->
    <mapping path="/main/*" decorator="/WEB-INF/views/decorators/mainDecorator.jsp" />
	<mapping path="/inc/*" decorator="/WEB-INF/views/decorators/incDecorator.jsp" />

	<!-- sitemesh에서 제외할 리소스들. -->
	<mapping path="/resources/*" excludes="true" />
	<mapping path="*.html" excludes="true" />
	<mapping path="*.htm" excludes="true" />
	<mapping path="*.js" excludes="true" />
	<mapping path="*.css" excludes="true" />
</sitemesh>